<% @nearest_stations.each do |station|%>
  <h3>最寄り駅<%= station.house_id %></h3>
  <p>路線名：<%= station.line %></p>
  <p>駅名：<%= station.station%></p>
  <p>徒歩分数：<%= station.minutes %>分</p>
<% end %>

